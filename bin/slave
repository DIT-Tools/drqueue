#!/bin/sh
#
# $Id: slave,v 1.4 2002/12/02 22:42:25 jorge Exp $
#
# Slave starting program that restarts the slave after failure
#
    
if [ `uname -s` == "Linux" ]; then
  while [ 1 ]; do
    $DRQUEUE_ROOT/bin/slave.linux $*
    sleep 60
  done
else
  echo "Irix"
  while [ 1 ]; do
    $DRQUEUE_ROOT/bin/slave.irix $*
    sleep 60
  done
fi
